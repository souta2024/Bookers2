<%= flash[:notice] %>
<dev class="container">
  <div class="row">
    <div class="mx-auto">
      <h1>
        welcome to
        <i class="fa-solid fa-book"></i><strong>Bookers</strong>
        !!
      </h1>
      <p>
        In
        <i class="fa-solid fa-book"></i><strong>Bookers</strong>,
      </p>
      <p>you can share and exchange your opinions , inpressions , and emotions</p>
      <p>about various books!</p>
      <div class="col-10 mx-auto">
        <% if user_signed_in? %>

          <div class="row">
            <%= link_to "Log in", user_path(current_user.id), class: "btn btn-info btn-sm btn-block" %>
          </div>
          <div class="row">
            <%= link_to "Sign up", user_path(current_user.id), class: "btn btn-success btn-sm btn-block" %>
          </div>

        <% else %>
          <div class="row">
            <%= link_to "Log in", new_user_session_path, class: "btn btn-info btn-sm btn-block" %>
          </div>
          <div class="row">
            <%= link_to "Sign up", new_user_registration_path, class: "btn btn-success btn-sm btn-block" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</dev>