<div class="container">
  <div class="row">
    <%= render 'user', user: @user, book_new: @book_new %>
    <div class="col-8 offset-1">
      <h2>Users</h2>
      <table class="table">
        <thead>
          <th>image</th>
          <th>name</th>
          <th></th>
        </thead>
        <% @users.each do |user| %>
        <tbody>
          <td><%= image_tag user.get_profile_image %></td>
          <td><%= user.name %></td>
          <td><%= link_to "show", user_path(user.id) %></td>
        </tbody>
        <% end %>
      </table>
    </div>
  </div>
</div>