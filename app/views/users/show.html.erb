<div class="container">
  <div class="row">
    <%= render "user", user: @user, book_new: @book_new %>
    <div class="col-8 col-1">
      <h2>Books</h2>
      <table class="table">
        <thead>
          <th></th>
          <th>Title</th>
          <th>Opinion</th>
          <th colspan="3"></th>
        </thead>
        <% @book.each do |book| %>
        <tbody>
          <td><%= image_tag book.user.get_profile_image %></td>
          <td>
            <%= link_to book_path(book.id) do %>
            <%= book.title %>
            <% end %>
          </td>
          <td><%= book.body %></td>
        </tbody>
        <% end %>
      </table>
    </div>
  </div>
</div>