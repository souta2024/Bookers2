<div class="container">
  <div class="row">
    <div class="col-3">
      <h2>User info</h2>
      <p><%= image_tag @user.get_profile_image %></p>
      <table claa="table">
        <tbody>
          <tr>
            <th>name</th>
            <th><%= @user.id %></th>
          </tr>
          <tr>
            <th>introduction</th>
            <th><%= @user.introduction %></th>
          </tr>
        </tbody>
      </table>
      <div class="row">
        <%= link_to edit_user_path(@user.id), class: "btn btn-outline-secondary btn-block" do %>
        <i class="fa-solid fa-user-gear"></i>
        <% end %>
      </div>

      <h2>New book</h2>
      <%= form_with model: @book do |f| %>
        <label>Title</label>
        <%= f.text_field :title, class: "form-control" %>
        <label>Opinion</label>
        <%= f.text_area :body, class: "form-control" %>
        <%= f.submit 'Create Book', class: "btn btn-success" %>
      <% end %>
    </div>
    <div class="col-8 offset-1">
      <h2>Books</h2>
        <table class="table">
          <thead>
            <tr>
              <th></th>
              <th>Title</th>
              <th>Option</th>
              <th colspan="3"></th>
            </tr>
          </thead>
          <tbody>
            <% @books.each do |book| %>
            <tr>
              <td><%= image_tag book.user.get_profile_image %></td>
              <td>
                <%= link_to book_path(book.id) do %>
                  <%= book.title %>
                <% end %>
              </td>
              <td><%= book.body %></td>
            </tr>
            <% end %>
          </tbody>
        </table>
    </div>
  </div>
</div>