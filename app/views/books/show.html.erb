<div class="container">
  <div class="row">
    <%= render 'users/user', user: @user, book_new: @book_new %>
    <div class="col-8 offset-1">
      <h2>Book detail</h2>
      <table class="table">
        <tbody>
          <tr>
            <td>
              <%= link_to user_path(@user_id) do %>
                <%= image_tag @book.user.get_profile_image %>
                <br>
                <%= @user.name %>
              <% end %>
            </td>
            <td>
              <%= link_to book_path(@book.id) do %>
                <%= @book.title %>
              <% end %>
            </td>
            <td><%= @book.body %></td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>